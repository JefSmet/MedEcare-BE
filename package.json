{
  "name": "medecare-be",
  "version": "1.0.0",
  "description": "A Node.js backend server implementing authentication using Passport.js and Prisma with MS SQL Server.",
  "main": "dist/server.js",
  "type": "commonjs",
  "scripts": {
    "dev": "ts-node-dev src/server.ts --respawn --transpileOnly",
    "build": "tsc",
    "start": "node dist/server.js",
    "migrate": "prisma migrate dev",
    "prisma:generate": "prisma generate"
  },
  "keywords": [
    "node",
    "express",
    "passport",
    "prisma",
    "ms-sql",
    "authentication",
    "bcrypt",
    "sendgrid",
    "jwt"
  ],
  "author": "Jef Smet",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^4.0.0",
    "bcrypt": "^5.1.0",
    "dotenv": "^16.0.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "sendgrid": "^5.2.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.14.0",
    "@types/passport-local": "^1.0.35",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5"
  }
}
