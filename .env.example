# ------------------------------------------------------------------------------
# Example Environment Variables
# Copy this file to .env.local and fill in your real values
# ------------------------------------------------------------------------------

# Express Server Port
PORT=3000

# Database Connection String (MS SQL)
DB_URL="server=your_sql_server;database=your_db;user=your_user;password=your_password;"

# JWT Secret
JWT_SECRET="your_jwt_secret_here"

# Specify which provider to use: 'sendgrid' | 'resend' | 'nodemailer'
EMAIL_PROVIDER="nodemailer"

# SendGrid API Key
SENDGRID_API_KEY="SG.your_sendgrid_api_key_here"

# Resend API Key
RESEND_API_KEY="your_resend_api_key_here"

# Nodemailer / SMTP Credentials
SMTP_HOST="smtp.yourservice.com"
SMTP_PORT="587"
SMTP_USER="your_smtp_username"
SMTP_PASSWORD="your_smtp_password"

# domein waarop de cookies geldig zijn
COOKIE_DOMAIN=localhost      # productie: jouw echte domein
COOKIE_SECURE=false          # true in productie (https)
FRONTEND_ORIGIN=http://localhost:8000
ACCESS_TOKEN_EXPIRY_WEB="1h"
REFRESH_TOKEN_EXPIRY_WEB="2d"
ACCESS_TOKEN_EXPIRY_MOBILE="1h"
REFRESH_TOKEN_EXPIRY_MOBILE="2d"